@model ProduceFormModel

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <h2 class="heading-margin text-center">@ViewBag.Title</h2>
        <h2 class="heading-margin text-center">@Model.BeehiveName</h2>

        <form method="post">
            <div class="form-group">
                <label asp-for="Date"></label>
                <input asp-for="Date" class="form-control" value="@DateTime.Now">
                <span asp-validation-for="Date" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HoneyKg"></label>
                <input asp-for="HoneyKg" class="form-control" placeholder="Enter honey in kilograms - 10.300..">
                <span asp-validation-for="HoneyKg" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HoneyType"></label>
                <input asp-for="HoneyType" class="form-control" placeholder="Манов, акациев, букет, слънчослед...">
                <span asp-validation-for="HoneyType" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Notes"></label>
                <input asp-for="Notes" class="form-control" placeholder="Забележки...">
                <span asp-validation-for="Notes" class="small text-danger"></span>
            </div>


            <input class="btn btn-primary mt-3" type="submit" value="Save" />
        </form>
    </div>
</div>